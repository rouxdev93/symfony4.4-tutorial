{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if usersToFollow|length > 0 %}
        <p>{{ 'currently.not.following'|trans }}</p>
        {% for userToFollow in  usersToFollow %}
            <a href="{{ path('micro_post_user' ,{ 'username': userToFollow.username }) }}"> @{{ userToFollow.username }}</a>
        {% endfor %}
    {% else %}
        <h6 class="border-bottom border-gray pb-2 mb-0">{{ 'recent.updates'|trans }}</h6>
        {% for post in posts %}
            <small class="d-block text-right mt-3">
                {% if is_granted('edit', post) %}
                    <a href="{{ path('micro_post_edit', {'id': post.id }) }}">{{ 'micro.post.edit'|trans }}</a>
                {% endif %}
                {% if is_granted('remove', post) %}
                    <a href="{{ path('micro_post_remove', {'id': post.id }) }}">{{ 'micro.post.delete'|trans }}</a>
                {% endif %}
            </small>

            {{ include('micro-post/raw-post.html.twig', { 'post': post }) }}

        {% endfor %}
    {% endif %}
{% endblock %}